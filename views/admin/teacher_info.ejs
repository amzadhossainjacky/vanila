<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coaching Management System</title>
    <link rel="stylesheet" href="/assets/fontawesome/css/all.css" />
    <link rel="stylesheet" href="/assets/css/bootstrap.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/responsive.css" />
</head>

<body>
    <section class="nav-section">
        <header class="admin-panel">
            <nav class="nav-design">
                <div class="logo">
                    <h2>Vanila</h2>
                </div>
                <ul>
                    <li>
                        <h5><%= adminName %></h5>
                    </li>
                    <li>
                        <a href="" class="btn-primary"><i class="fas fa-bell"></i></a>
                    </li>
                    <li>
                        <a href="/logout" class="n-btn"> Logout </a>
                    </li>
                </ul>
            </nav>
        </header>
    </section>

    <section>
        <div id="wrapper">
            <!-- Sidebar -->
            <div class="sidebar">
                <ul>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home">Profile</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/create_course">Create Course</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/view_course">View Course</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/approve_student">Approve Student</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/approve_teacher">Approve Teacher</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/student_info">Student Info</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a class="ad-active" href="/home/teacher_info">Teacher Info</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/notes_upload">Notes Upload</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/notice_upload">Notice Upload</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/marks_entry">Create Marks</a>
                    </li>
                    
                    <li>
                        <i class="fas fa-hands-helping"></i> <a href="/home/entry_salary">Entry Salary</a>
                    </li>
                    
                    <li>
                        <i class="fas fa-hands-helping"></i> <a href="/home/view_salary">View Salary</a>
                    </li>
                    
                    <li>
                        <i class="fas fa-hands-helping"></i> <a  href="/home/report"> Report </a>
                    </li>
                </ul>
            </div>

            <div id="content-wrapper">
                <div class="container-fluid">
                    <div class="row justify-content-center text-center">
                        <div class="col-lg-8 mb-4 mr-auto">
                            <h1>Teacher Info</h1>
                        </div>
                        <div class="col-lg-10 mb-4">
                            <nav class="navbar navbar-light bg-light">
                                <form class="form-inline ml-auto" method="post">
                                  <input class="form-control mr-sm-2" type="text" placeholder="Search" name="search">
                                  <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="search">
                                </form>
                            </nav>
                        </div>
                        <div class="col-lg-10">
                            <table class="table table-hover table-primary">
                                <thead class="table-danger">
                                <tr>
                                    <th>TEACHER ID</th>
                                    <th>TEACHER NAME</th>
                                    <th>ACTION</th>
                                </tr>
                                </thead>
                            
                                <tbody>
                                    <% for (var i=0; i<results.length; i++) {%>
                                       
                                        <tr>
                                            <td><%=  results[i].tid%></td>
                                            <td><%=  results[i].tname%></td>
                                            <td >
                                                <a href="/home/teacher_info_edit/<%=  results[i].tid%>" class="btn btn-warning">Edit</a>
                                                <a href="/home/teacher_delete/<%=  results[i].tid%>" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                        
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/proper.js"></script>
    <script src="/assets/js/bootstrap.js"></script>

   
</body>

</html>