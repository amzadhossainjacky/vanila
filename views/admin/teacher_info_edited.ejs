<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coaching Management System</title>
    <link rel="stylesheet" href="/assets/fontawesome/css/all.css" />
    <link rel="stylesheet" href="/assets/css/bootstrap.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link rel="stylesheet" href="/assets/css/responsive.css" />
</head>

<body>
    <section class="nav-section">
        <header class="admin-panel">
            <nav class="nav-design">
                <div class="logo">
                    <h2>Vanila</h2>
                </div>
                <ul>
                    <li>
                        <h5><%= adminName %></h5>
                    </li>
                    <li>
                        <a href="" class="btn-primary"><i class="fas fa-bell"></i></a>
                    </li>
                    <li>
                        <a href="/logout" class="n-btn"> Logout </a>
                    </li>
                </ul>
            </nav>
        </header>
    </section>

    <section>
        <div id="wrapper">
            <!-- Sidebar -->
            <div class="sidebar">
                <ul>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home">Profile</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/create_course">Create Course</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/view_course">View Course</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/approve_student">Approve Student</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/approve_teacher">Approve Teacher</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/student_info">Student Info</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a class="ad-active"  href="/home/teacher_info">Teacher Info</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/notes_upload">Notes Upload</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/notice_upload">Notice Upload</a>
                    </li>
                    <li>
                        <i class="fas fa-users"></i> <a href="/home/marks_entry">Create Marks</a>
                    </li>
                    
                    <li>
                        <i class="fas fa-hands-helping"></i> <a href="/home/entry_salary">Entry Salary</a>
                    </li>
                    
                    <li>
                        <i class="fas fa-hands-helping"></i> <a href="/home/view_salary">View Salary</a>
                    </li>
                </ul>
            </div>

            <div id="content-wrapper">
                <div class="container-fluid">
                    <div class="row justify-content-center text-center">
                        <div class="col-lg-10 mb-4 ">
                            <h1> Teacher Info Update</h1>
                        </div>
                        <div class="col-lg-5">
                            <form action="" method="POST">

								<div class="form-group">
                                        <label for="fullname">Full Name of Teacher:</label>
                                        <input type="text" class="form-control" id="fullname" value="<%=results[0].tname%>"
                                        name="tname">
                                    </div>
                                        
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="text" class="form-control" id="email"  value="<%=results[0].temail%>"
                                        name="temail">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Password</label>
                                        <input type="text" class="form-control" id="password"  value="<%=results[0].tpass%>" 
                                        name="password">
                                    </div>

                                    <div class="form-group">
                                        <label for="TPhoneNumber">Phone Number</label>
                                        <input type="number" class="form-control" id="TPhoneNumber"  value="<%=results[0].tphone%>"
                                        name="TPhoneNumber">
                                    </div>

                                    <div class="form-group">
                                        <label for="qualification_details">Qualification</label><br>
                                        <textarea class=" text-center mt-1" name="qualification_details" cols="50" rows="10"> <%= results[0].tqualification %></textarea>
                                    </div>
                                    <input type="submit" class="btn btn-info" value="update">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/proper.js"></script>
    <script src="/assets/js/bootstrap.js"></script>
</body>

</html>